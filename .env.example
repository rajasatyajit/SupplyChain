# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=30s

# Database Configuration
DATABASE_URL=postgres://supplychain:password@localhost:5432/supplychain?sslmode=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m

# Pipeline Configuration
PIPELINE_RATE_LIMIT=5.0
PIPELINE_WORKER_COUNT=4
PIPELINE_BATCH_SIZE=100
PIPELINE_RETRY_ATTEMPTS=3
PIPELINE_RETRY_DELAY=5s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Auth & API Keys
AUTH_REQUIRE_API_KEYS=false
AUTH_KEY_HEADER=Authorization
AUTH_AGENT_HEADER=X-Client-Type
AUTH_ENABLE_AGENT_HEADER=true

# Redis (for rate limiting/usage accounting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Stripe/Billing (placeholders; use test keys in dev)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Product price IDs (from Stripe dashboard)
STRIPE_PRICE_LITE_MONTHLY=
STRIPE_PRICE_LITE_ANNUAL=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_ANNUAL=
STRIPE_PRICE_OVERAGE_METERED=
# Checkout/Portal URLs
STRIPE_CHECKOUT_SUCCESS_URL=https://dashboard.example.com/billing/success
STRIPE_CHECKOUT_CANCEL_URL=https://dashboard.example.com/billing/cancel
STRIPE_PORTAL_RETURN_URL=https://dashboard.example.com/billing
# 0.0033 cents per request = 0.000033 USD per request
BILLING_OVERAGE_PRICE_PER_REQUEST_USD=0.000033

# Razorpay (optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_CURRENCY=INR
# amounts in paisa
RAZORPAY_AMOUNT_LITE_MONTHLY_PAISA=49900
RAZORPAY_AMOUNT_LITE_ANNUAL_PAISA=499000
RAZORPAY_AMOUNT_PRO_MONTHLY_PAISA=199900
RAZORPAY_AMOUNT_PRO_ANNUAL_PAISA=1999000

# Admin
ADMIN_SECRET=
